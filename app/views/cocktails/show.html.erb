<h1><%= @cocktail.name %></h1>

<h3>Doses:</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> -- <%= dose.ingredient.name %></li>
   <p><%= link_to 'Delete dose', dose_path(dose), method: :delete %></p>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<p><%= link_to 'Back to cocktail list', cocktails_path %></p>
